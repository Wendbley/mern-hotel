model Profile {
  id     String     @id @default(cuid())
  bio    String?
  user   User    @relation(fields: [userId], references: [id])
  userId String     @unique
}

model User {
  id      String      @id @default(cuid())
  email   String   @unique
  password String
  firstName    String?
  lastName   String?
  profile Profile?
  hotel Hotel?
}

model Hotel{
  id      String      @id @default(cuid())
  user  User   @relation(fields: [userId], references: [id])
  userId String @unique
  name String
  city String
  country String
  description String
  type String
  adultCount Int
  chidlCount Int
  facilities String[]
  pricePerNight Int
  starRating Int
  imageUrls String[]
  lastUpdated DateTime
}